<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:ConsoleApp5.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ConsoleApp5.Views.DialogFilterWindow"
        x:DataType="viewModels:DialogFilterViewModel"
        Title="DialogFilterWindow" Width="220" Height="400">


    <StackPanel>
        <Label>Keyword</Label>
        <TextBox Text="{Binding Keyword}" Width="200" Height="50" Margin="0 10 0 0 " Name="Keyword"></TextBox>
        <StackPanel Margin="5">
            <ComboBox SelectedIndex="{Binding Mode, Mode=TwoWay}" MaxDropDownHeight="100">
                <ComboBoxItem>By Title</ComboBoxItem>
                <ComboBoxItem>By Author</ComboBoxItem>
                <ComboBoxItem>By ISBN</ComboBoxItem>
                <ComboBoxItem>By Keyword</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <Button Width="200" Height="100" Margin="10" Command="{Binding ConfirmAction}"
                VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Name="OkButton">
            OK
        </Button>
    </StackPanel>


</Window>